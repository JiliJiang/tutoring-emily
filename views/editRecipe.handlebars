<div class="edit-recipe-container">
  <h2>
    Update Recipe
  </h2>
  <form class="edit-recipe-form">
     <label for="author">
      Author:
    </label>
    <br />
    <textarea id="author" name="author" rows="2" cols="30">
      {{author}}
    </textarea>
    <br />
    <label for="title">
      Recipe Name:
    </label>
    <br />
    <textarea id="title" name="title" rows="2" cols="30">
      {{title}}
    </textarea>
    <br />
    <label for="instructions">
      Instructions:
    </label>
     <br />
    <textarea id="instructions" name="instructions" rows="2" cols="30">
      {{instructions}}
    </textarea>
    <br />
     <label for="title">
      Ingridents:
    </label>
    <br />
    <textarea id="ingridents" name="ingridents" rows="2" cols="30">
      {{ingridents}}
    </textarea>
    <br />
     <label for="image">
      Image:
    </label>
     <br />
    <textarea id="image" name="image" rows="2" cols="30">
      {{image}}
    </textarea>
  <button type="submit" value="Submit">
        Submit
      </button>
      <button class="delete-button">Delete Recipe</button>
    </form>
<input type="hidden" id="recipe-id" value="{{recipe.id}}" />
<script src="../js/edit-recipe.js"></script>
<script src="../js/delete-recipe.js"></script>

