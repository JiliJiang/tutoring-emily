<div class="container">
    <div class="row"> 
        <div class="col">
            <h1>{{header}}</h1>
            <p>{{description}}</p>
        </div>
    </div>
</div>  
<div class="mt-5 gap-2 d-flex flex-wrap justify-content-center">
    {{#each cards}}
        <div class="card" style="width: 18rem;">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.text}}</p>
                <a href="{{this.link}}" class="btn btn-primary">{{this.buttonText}}</a>
            </div>
        </div>
    {{/each}}
</div>
